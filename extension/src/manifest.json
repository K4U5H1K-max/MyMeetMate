{
  "manifest_version": 3,
  "name": "Meeting Whisperer",
  "version": "0.1.0",
  "description": "AI-powered meeting assistant for Google Meet, Zoom, MS Teams.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
  "js": ["content/googleMeet.js"]
    },
    {
      "matches": ["https://*.zoom.us/*"],
  "js": ["content/zoom.js"]
    },
    {
      "matches": ["https://teams.microsoft.com/*"],
  "js": ["content/teams.js"]
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
